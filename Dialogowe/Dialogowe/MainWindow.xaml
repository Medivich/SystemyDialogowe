<Window x:Class="Dialogowe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dialogowe"
                xmlns:vm="clr-namespace:Dialogowe"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="68,10,0,0" 
                   TextWrapping="Wrap" 
                   Text="Automatyczny sklep komputerowy 'Neutron'" 
                   VerticalAlignment="Top" 
                   Height="21" 
                   Width="355"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="10,36,0,0" 
                   TextWrapping="Wrap" 
                   Text="{Binding TekstWiadomosci}" 
                   VerticalAlignment="Top" 
                   Height="107" 
                   Width="497" FontSize="24"/>
        <Button Content="Wyślij" HorizontalAlignment="Left" Margin="390,171,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="363" ToolTip="Wprowadź tekst wypowiedzi"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="10,206,0,0" 
                   TextWrapping="Wrap" 
                   Text="{Binding RozpoznanyTekst}" 
                   VerticalAlignment="Top" 
                   Height="93" 
                   Width="455"/>
    </Grid>
</Window>
